import re
import streamlit as st

st.set_page_config(page_title="Password Strength Chacker by Rizwan Bhatti", page_icon="üåò", layout="centered")
st.markdown(""""
<style>
            .main (text-align: center;)
            .stTextInput {width:60% !important; margin:}  
            .stButton button {width 70%; background-color blue; color:white; font-size: 18px; }
            .stButton button:hover{background-color: white;}
            </style>
             """, unsafe_allow_html=True)

# page title and description 
st.title("üîí Password Strength Generator ")
st.write("üîç Enter your Password below to verified the security Policy")

# Function to check password strength 

def check_password_strength(password):
    score = 0
    feedback = []

    if len(password)>= 8:
        score += 1 
    else:
        feedback.append("‚ùå Password should be ""Atleast 8 charactor long","")
    if re.search(r"[A-Z]",password) and re.search(r"[a-z]",password):
       score += 1

    else: 
        feedback.append("‚ùå Password should be included "" Both Upper & Lower Case""")
    if re.search(r"\d", password):
        score +=1
    else:
        feedback.append("‚ùå Password should be ""Atleast one Number")

        if re.search(r"[@#$%^&*()]",password):
            score +=1
        else:
            feedback.append("‚ùå Password should be ""Atleast one Special charactor")

    # display password strength result
        if score == 4:
            st.success("‚úîÔ∏è "" Strong Password"" Your Password is secure.")

        elif score == 3:
        
            st.info (" ‚ö†Ô∏è ""Moderate Password""- Consider Improving security fetures")
        
        else:
            st.error("‚ùå ""Week Password"" - Follow the suggestion below to Strength it.")

# feedback 
    if feedback:
            with st.expander("üîç ""Improve Your Passwor"" "):
                for item in feedback:
                    st.write(item)   

password = st.text_input("Enter your Password-:", type="password",help="Make Ensure your Password is strong üîí")

 # Button working 
if st.button ("Check Strength"):
            if password:
                check_password_strength(password)
            else:
                st.warning("Please Enter a password First")
